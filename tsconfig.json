{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "noImplicitAny": false,  // Temporarily disable to get it building
    "useUnknownInCatchVariables": false  // Allow using error.message directly
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}